<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pizza_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/pizza_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pizza_image"
        app:layout_constraintTop_toTopOf="@id/pizza_image"
        android:text="@string/pizza_item_title"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/super_low_mp"
        />
    <TextView
        android:id="@+id/pizza_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_for_pizza_item"
        app:layout_constraintLeft_toLeftOf="@id/pizza_name"
        app:layout_constraintTop_toBottomOf="@id/pizza_name"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:background="@drawable/shape_price"
        android:id="@+id/picca_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/pizza_about"
        app:layout_constraintTop_toBottomOf="@id/pizza_about"
        android:layout_marginTop="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp"
        android:text="106 TJS"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>